<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.identityblitz</groupId>
    <artifactId>scs-lib</artifactId>
    <name>${project.groupId}:${project.artifactId}</name>
    <version>0.2.0</version>
    <packaging>jar</packaging>
    <description>
        The Java implementation of Secure Cookie Session (SCS).
        The implementation conforms RFC 6896 (https://tools.ietf.org/html/rfc6896).
    </description>
    <url>https://github.com/brainysmith/scs-lib</url>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>Vladimir Karpov</name>
            <email>brainysmith@gmail.com</email>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git@github.com:brainysmith/scs-lib.git</connection>
        <developerConnection>scm:git:git@github.com:brainysmith/scs-lib.git</developerConnection>
        <url>git@github.com:brainysmith/scs-lib.git</url>
    </scm>

    <repositories>
        <repository>
            <id>typesafe</id>
            <name>typesafe-releases</name>
            <url>http://repo.typesafe.com/typesafe/releases</url>
        </repository>
    </repositories>

    <properties>
        <jdk.version>1.6</jdk.version>
        <maven-compiler-plugin.version>2.0.2</maven-compiler-plugin.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <nexus-repository>http://build.reaxoft.loc/store/content/repositories</nexus-repository>
    </properties>

    <profiles>
        <profile>
            <id>Reaxoft</id>
            <distributionManagement>
                <repository>
                    <id>build</id>
                    <uniqueVersion>false</uniqueVersion>
                    <name>com.identityblitz</name>
                    <url>${nexus-repository}/blitz-dev</url>
                </repository>
            </distributionManagement>
        </profile>
        <profile>
            <id>Maven</id>
            <distributionManagement>
                <repository>
                    <id>com.identityblitz.release</id>
                    <name>com.identityblitz</name>
                    <url>https://oss.sonatype.org/service/local/staging/deploy/maven2</url>
                </repository>
            </distributionManagement>
        </profile>
    </profiles>

